{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./lib",
        "sourceMap": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*"
    ],
    "types": [
        "node",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}