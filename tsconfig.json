{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    "strictNullChecks": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "spec/**/*",
    "scripts/**/*",
    "app.js"
  ],
  "typedocOptions": {
    "out": ".typedoc",
    "entryPoints": ["src/index.ts"],
    "excludePrivate": true,
    "exclude": ["**/index.ts"]
  }
}
