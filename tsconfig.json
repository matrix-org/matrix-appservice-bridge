{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true, /* matrix-js-sdk throws up errors */
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "spec/**/*",
    "scripts/**/*",
    "app.js"
  ],
  "typedocOptions": {
    "out": ".typedoc",
    "entryPoints": ["src/index.ts"],
    "excludePrivate": true,
    "exclude": ["**/index.ts"]
  }
}
